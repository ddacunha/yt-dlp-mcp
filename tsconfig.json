{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "pretty": true,
    "target": "ES2020",
    "outDir": "lib",
    "lib": ["dom", "es2015"],
    "esModuleInterop": true,
    "allowJs": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": ["src/**/*.mts", "src/**/*.ts", "src/types/*.d.ts"],
  "exclude": ["node_modules", "lib"]
}
